<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <!-- Optional theme -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css" />
    <link rel="stylesheet" href="~/lib/css/themes/office/pqgrid.css" />
    <link rel="stylesheet" href="~/lib/css/pqgrid.min.css" />
    <link rel="stylesheet" href="~/lib/css/IOMapApp.css" />

    <title>LOOP Automation Info</title>
    <style>
        body {
            margin: 5px;
            background: #A6A6A6
        }

        /* Tab Navigation */
        .nav-tabs {
            margin: 0;
            padding: 0;
            border: 0;
        }

            .nav-tabs > li > a {
                background: #DADADA;
                border-radius: 0;
                box-shadow: inset 0 -8px 7px -9px rgba(0,0,0,.4),-2px -2px 5px -2px rgba(0,0,0,.4);
            }

        /* Tab Content */
        .tab-pane {
            background: #edeeef;
            box-shadow: 0 0 4px rgba(0,0,0,.4);
            border-radius: 0;
            text-align: center;
            padding: 10px;
        }

    </style>
</head>

<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header" style="margin-bottom:0px">

                <h4 style="color:white; margin-bottom:0px; margin-top:15px;">Marine Terminal <small> &nbsp HMI Database Configuration System</small></h4>
            </div>

            <ul class="nav navbar-nav navbar-right">
                <li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">

        <!-- Static navbar -->
        <ul class="nav nav-tabs" role="tablist">
            <li>
                <a href="#profile" role="tab" data-toggle="tab">
                    <i class="glyphicon glyphicon-list-alt"></i> IO Tags
                </a>
            </li>
            <li>
                <a href="#messages" role="tab" data-toggle="tab">
                    <i class="glyphicon glyphicon-warning-sign"></i> Alarms
                </a>
            </li>
        </ul>

        <div class="tab-pane" style="color:blue;">
            @RenderBody()
        </div>

    </div> <!-- /container -->
    <div class="footer" style=" margin:10px">
        <p style="text-align: right"><small>Logical Systems Inc.</small> &nbsp &nbsp &nbsp</p>
    </div>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="maxcdn.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/lib/js/pqgrid.min.js"></script>


    @RenderSection("scripts", required: false)

</body>
</html>
